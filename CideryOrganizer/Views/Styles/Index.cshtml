@{
  Layout = "_Layout";
}
@using CideryOrganizer.Models;

<br><br>
<h1>Styles</h1>
<hr><br>

@if (@Model.Count == 0)
{
  <p>No styles have been added yet!</p>
}
@foreach (Style style in Model)
{
  <li>@Html.ActionLink($"{style.StyleName}", "Details", new { id = style.StyleId}, new {@class="list-detail"}) </li>
}
<hr><br><br>
<p>@Html.ActionLink("Add New Style", "Create", null, null, new {@class="btn btn-outline-dark btn-sm"})</p>
