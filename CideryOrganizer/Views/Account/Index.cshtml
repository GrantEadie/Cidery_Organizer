@{
  Layout = "_Layout";
}
<div class="bgimage">
<h1 style="color:white; padding-top:100px; text-align:center"><span style="font-weight:900">Login | Register<br>
</div>
<br>

@using System.Security.Claims

<hr /><br><br>
<div class="row">
    <div class="col-sm">
      
    </div>
    <div class="col-sm">
      @if (User.Identity.IsAuthenticated)
        {
          <h2>Hello,<br><br><b>@User.Identity.Name</b></h2><br>
          @using (Html.BeginForm("LogOff", "Account"))
          {
            <br><input type="submit" class="button3" style="width:100%" value="Log out" /><br><br>
          }
        }
        else
        {
          <p>@Html.ActionLink("Register", "Register")</p>
          <p>@Html.ActionLink("Log in", "Login", null, null, new { @class="button3"})</p>
        }
    </div>
    <div class="col-sm">
      
    </div>
  </div>